{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++11",
                "-stdlib=libc++",
                "-Wall",
                "-g",
                "hw1.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clear",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/a.out",
                "${workspaceFolder}/a.out.dSYM"
            ],
            "problemMatcher": []
        }
    ],

}